<div>
    <% if user_signed_in? && current_user.role == 'premium' %>
        <%= form_for [Collaborator.new] do |f| %>
            <div class="form-group">
              <h4>Add Collaborator by Email Address</h4>
              <%= f.label :user, class: 'sr-only' %>
              <%= f.text_field :user, class: 'form-control', placeholder: "Collaborator's email" %>
            </div>
            <div class="form-group">
              <%= f.submit "Save Collaborator", class:'btn btn-success' %>
            </div>
        <% end %>
      <% end %>
    <p>Current Collaborators <%= @wiki.collaborators.count %></p>
    <% @wiki.collaborators.each do |collaborator| %>
      <%= collaborator.user.email %>
      <% if @wiki.user == current_user %>
        <%= link_to "", [collaborator], method: delete, class: 'glyphicon glyphicon-ok' %>
      <% end %>
    <% end %>
</div>